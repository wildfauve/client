<div class='alert alert-info fade in' data-alert='alert'>
   <h3>Customers</h3>
</div>

<table class="table">
   <thead>
     <tr>
       <th>Name</th>
       <th>Number</th>
       <th>Permit</th>       
       <th>Actions</th>      
     </tr>
   </thead>
   <tbody>
      <% for customer in @customers %>         
         <tr>
            <td>
               <%= link_to customer.name, customer_path(customer)%>
            </td>
            <td><%= customer.number %></td>
            <td><%= customer.permit %></td>            
            <td>
               <%= link_to "Show",  customer_path(customer), class: "btn btn-default"%>
               <%= link_to "Edit",  edit_customer_path(customer), class: "btn btn-default"%>               
            </td>
         </tr>
      <% end %>
   </tbody>
</table>